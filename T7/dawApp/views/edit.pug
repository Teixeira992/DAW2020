extends layout

block content
  .w3-modal(style='display:block;')
    .w3-modal-content.w3-card-4
      header.w3-container.w3-teal.w3-card-4.w3-center
        h3 Edit #{student.nome}
      .w3-container.w3-margin.w3-padding.w3-section
      
        form#form.w3-container.w3-padding-16
          b
            label Number
          input.w3-input.w3-border(id="numero" type="text" name="numero" value=student.numero)
          br
          b
            label Name
          input.w3-input.w3-border(id="nome" type="text" name="nome" value=student.nome)
          br
          b
            label Git
          input.w3-input.w3-border(id="git" type="text" name="git" value=student.git)
          br
          button.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-blue(onclick="sendEditarItem('" + student._id + "')") EDIT
