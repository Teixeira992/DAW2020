extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
        button.w3-btn.w3-light-grey.w3-right(style="margin-top:0.5%" onclick="window.location.assign('/registar')") Add Student
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git

            each s in list
              tr
                td= s.numero  
                td= s.nome
                td= s.git
                  button.w3-btn.w3-light-green.w3-right(onclick="window.location.assign('/students/" + s._id + "')" class='fa fa-info') more
                  button.w3-btn.w3-red.w3-right(onclick='apagaItem("' + s._id + '")') delete
                  button.w3-btn.w3-light-blue.w3-right(onclick="window.location.assign('/students/editar/" + s._id + "')" class='fa fa-edit') edit
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, teixeira 