extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-teal
                h3 Add Student
            form.w3-container(action="/students" method="POST")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="numero" placeholder="Number")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="nome" placeholder="Name")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="git" placeholder="Git")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="tpc" placeholder="TPCs")
                input.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-teal(type="submit" value="Add")

        .w3-container.w3-teal
            footer.w3-container
                p
                    a(href="/students") Voltar à página principal